<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="app.com.esenatenigeria">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="app.com.esenatenigeria.utils.eSenateApplication"
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@mipmap/new_launcher_icon"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/new_launcher_icon_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="app.com.esenatenigeria.activities.SplashActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustNothing">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="app.com.esenatenigeria.activities.RecentActDetailActivity" />

        <!-- <activity -->
        <!-- android:name=".activities.LandingActivity" -->
        <!-- android:label="@string/title_activity_landing" -->
        <!-- android:theme="@style/AppTheme"></activity> -->
        <!-- <service android:enabled="true" android:name=".services.PdfDownloadingService" /> -->

        <activity
            android:name="app.com.esenatenigeria.activities.ViewPdfActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustNothing" />

        <activity
            android:name="app.com.esenatenigeria.activities.LandingActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustNothing" />

        <activity
            android:name=".youtube.VideoActivity"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="stateHidden|adjustNothing" />
    </application>

</manifest>